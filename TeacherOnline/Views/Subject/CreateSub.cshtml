@{
    ViewData["Title"] = "Создать предмет";
}
@model TeacherOnline.DTO.ViewModel.SubjectGroupTeacherVM;
<h2>@ViewData["Title"]</h2>

<form asp-controller="Subject" asp-action="CreateSub" method="post">
    <div class="mb-3">
        <label class="form-label">Название предмета</label>
        <input required type="text" class="form-control" asp-for="@Model.sub.Name">
        <label class="form-label">О предмете</label>
        <input required type="text" class="form-control" asp-for="@Model.sub.About">
    </div>
    <button type="submit" class="btn btn-outline-success">Создать предмет</button>
</form>