@{
    ViewData["Title"] = "Обновить группу";

}
@model TeacherOnline.DAL.Entities.Group;
<h2>@ViewData["Title"]</h2>

<form asp-controller="Group" asp-action="UpdateGroup" method="post">
    <div class="mb-3">
        <label class="form-label">Группа</label>
        <input required max="50" type="text" class="form-control" value="@Model.Name" asp-for="@Model.Name">
        <label class="form-label">Специальность</label>
        <input required max="50" type="text" class="form-control" value="@Model.Specialty" asp-for="@Model.Specialty">
    </div>
    <button type="submit" class="btn btn-outline-success">Обновить группу</button>
</form>