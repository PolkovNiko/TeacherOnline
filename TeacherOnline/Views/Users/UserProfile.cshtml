@{
    ViewData["Title"] = "Профиль";
}

@{
    var values = new List<string> { "Один(-на)", "Влюблён(-а)", "Женат\\Замужем", "В разводе" };
    string x, y;
    string date = "";
    if (Model.Date.Month < 10)
    {
        x = "0" + Model.Date.Month;
        if (Model.Date.Day < 10)
        {
            y = "0" + Model.Date.Day;
            date = Model.Date.Year + "-" + x + "-" + y;
        }
        else
        { date = Model.Date.Year + "-" + x + "-" + Model.Date.Day; }

    }
    else if(Model.Date.Day < 10)
    {
        y = "0" + Model.Date.Day;
        date = Model.Date.Year + "-" + Model.Date.Month + "-" + y;
    }
}

@model Praktika.Models.Profile

    

<h2>@ViewData["Title"]</h2>


<!-- g-* это размер отступов между элементами...

снизу - пример на создание профайла для пользователя админом.... просто пусть будет
-->
<form class="row g-3" style="width:1000px" asp-controller="Users" asp-action="UpdateProfile" enctype="multipart/form-data" method="post">
    <div class="col-md-2">
        <label for="inputEmail4" class="form-label">ID</label>
        <input readonly type="number" class="form-control" id="inputID" name="Id" value="@Model.Id">
    </div>
    <div class="col-md-3">
        <label for="inputFIO" class="form-label">Фамилия</label>
        <input type="text" class="form-control" id="inputFIO" placeholder="Иванов" value="@Model.LastName" name="LastName">
    </div>
    <div class="col-md-3">
        <label for="inputFIO" class="form-label">Имя</label>
        <input type="text" class="form-control" id="inputFIO" placeholder="Иван" value="@Model.FirstName" name="FirstName">
    </div>
    <div class="col-md-3">
        <label for="inputFIO" class="form-label">Отчетсво</label>
        <input type="text" class="form-control" id="inputFIO" placeholder="Иванович" value="@Model.Otchestvo" name="Otchestvo">
    </div>
    <div class="col-md-3">
        <label for="inputDataHB" class="form-label">День рождения</label>
        <input type="date" class="form-control" id="inputDataHB" value="@date" name="Date">
    </div>
    <div class="col-md-3">
        <label for="inputDepartment" class="form-label">Группа</label>
        <input type="text" class="form-control" id="inputAddress" placeholder="П-1" value="@Model.Group" name="Group">
    </div>
    <div class="col-md-3">
        <label for="inputNumber" class="form-label">О себе</label>
        <input type="text" class="form-control" id="inputNumber" value="@Model.About" name="About">
    </div>
    <div class="row">
        <div class="col-md-5">
            <label for="formFile" class="form-label">Загрузить фото</label>
            <input class="form-control" type="file" id="formFile" name="Photos">
            <img style='width:120px; height:120px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Photo))" />
        </div>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Сохранить данные</button>
    </div>
</form>