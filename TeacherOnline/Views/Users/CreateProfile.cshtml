@using TeacherOnline.DTO.ViewModel;
@{
    ViewData["Title"] = "Профиль";
}
@model UserProfileVM;

<h2>@ViewData["Title"]</h2>

<!-- g-* это размер отступов между элементами...

снизу - пример на создание профайла для пользователя админом.... просто пусть будет
-->
<form class="row g-3" style="width:1000px" enctype="multipart/form-data" method="post" asp-controller="Users" asp-action="CreateProfile">
        <div class="col-md-3">
            <label for="inputFIO" class="form-label">Фамилия</label>
            <input type="text" class="form-control" id="inputFIO" placeholder="Иванов" asp-for="@Model.Profile.LastName">
        </div>
        <div class="col-md-3">
            <label for="inputFIO" class="form-label">Имя</label>
        <input type="text" class="form-control" id="inputFIO" placeholder="Иван" asp-for="@Model.Profile.FirstName">
        </div>
        <div class="col-md-3">
            <label for="inputFIO" class="form-label">Отчетсво</label>
        <input type="text" class="form-control" id="inputFIO" placeholder="Иванович" asp-for="@Model.Profile.Otchestvo">
        </div>
        <div class="col-md-3">
            <label for="inputDataHB" class="form-label">День рождения</label>
        <input type="date" class="form-control" id="inputDataHB" asp-for="@Model.Profile.Date">
        </div>
        @if(!User.IsInRole("Teacher"))
        {
            <div class="col-md-3">
                <label for="inputDepartment" class="form-label">Группа</label>
                <select class="form-select" asp-for="@Model.Profile.Groups">
                    @foreach(var item in Model.Group)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>    
        }
        <div class="col-md-3">
            <label for="inputNumber" class="form-label">О себе</label>
        <input type="text" class="form-control" id="inputNumber" asp-for="@Model.Profile.About">
        </div>
        <div class="row">
            <div class="col-md-5">
                <label for="formFile" class="form-label">Загрузить фото</label>
            <input class="form-control" type="file" id="formFile" accept="image/*" asp-for="@Model.Profile.Photo">
            </div>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Сохранить данные</button>
        </div>
    </form>