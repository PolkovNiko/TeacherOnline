                <td>
                    <form method="post" asp-controller="Estimate" asp-action="DeleteEstimate" asp-route-id="@item.Id">
                        <button class="btn btn-danger" type="submit">Удалить</button> </form> 
                </td> 
                @*}*@
            </tr>
        }
    </tbody>
</table>